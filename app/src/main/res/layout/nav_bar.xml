<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/profile_button"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_profile_icon"
        android:text="Profile" />

    <Button
        android:id="@+id/all_habit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_all_habit"
        android:text="All habits" />

    <Button
        android:id="@+id/daily_habit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_daily_habit"
        android:text="daily habits" />
</LinearLayout>

