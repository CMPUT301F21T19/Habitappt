<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_comments_label"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center|center_horizontal"
                android:text="Event Comments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/event_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Event Comments"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/event_image_label"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center|center_horizontal"
                android:text="Attach Image:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="img"
                android:inputType="textPersonName" />



            <TextView
                android:id="@+id/event_date_label"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center|center_horizontal"
                android:text="Event Date:" />

            <CalendarView
                android:id="@+id/event_date_calender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>